# .env.vercel.example - Vercel部署环境变量示例

# =====================================
# AI模型配置 (至少配置一个)
# =====================================

# 智谱AI (推荐，国内速度快)
GLM_API_KEY=your_glm_api_key_here
GLM_EMBED_URL=https://open.bigmodel.cn/api/paas/v4/embeddings
GLM_CHAT_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions

# 硅基流动 (备选)
SILICONFLOW_API_KEY=your_siliconflow_api_key_here
SILICONFLOW_EMBED_URL=https://api.siliconflow.cn/v1/embeddings
SILICONFLOW_CHAT_URL=https://api.siliconflow.cn/v1/chat/completions

# OpenAI (备选)
OPENAI_API_KEY=your_openai_api_key_here

# =====================================
# 数据库配置 (生产环境必需)
# =====================================

# Upstash Redis (推荐，免费额度大)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# 备选：Supabase PostgreSQL
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =====================================
# 应用配置
# =====================================

# 环境设置
NODE_ENV=production

# 缓存配置
CACHE_TTL=600
QUERY_CACHE_TTL=1800

# API限制
MAX_QUERY_LENGTH=500
MAX_TOP_K=10
REQUEST_TIMEOUT=25000

# 前端API地址
NEXT_PUBLIC_API_BASE_URL=https://your-vercel-app.vercel.app

# =====================================
# 可选：原有向量数据库配置
# =====================================

# Pinecone (如果使用)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=news-index

# Cloudflare R2 (如果使用)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=your_bucket_name