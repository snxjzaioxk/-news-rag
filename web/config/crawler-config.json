{
  "version": "2.0",
  "description": "爬虫配置文件 - 模块化版本",

  "global": {
    "cache": {
      "enabled": true,
      "default_ttl": 120000,
      "max_memory_items": 100
    },
    "retry": {
      "max_attempts": 3,
      "initial_delay": 1000,
      "max_delay": 10000,
      "backoff_factor": 2
    },
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 60,
      "concurrent_limit": 5
    },
    "timeout": {
      "default": 15000,
      "max": 30000
    }
  },

